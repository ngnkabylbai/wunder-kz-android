<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353161"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLength="12"
                android:text="12+35"
                android:layout_marginBottom="8dp"
                android:textSize="30sp"
                android:textColor="#e7b615"/>

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLength="12"
                android:text="47"
                android:layout_marginBottom="8dp"
                android:textSize="30sp"
                android:textColor="#e7b615"/>
        </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#464083"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/acButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="#e7b615"
                android:layout_gravity="center_vertical"
                android:text="AC"
                android:textSize="30sp"
                android:background="@drawable/ac_button"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/percentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dark_shadow"
                android:text="%"
                android:textSize="30sp"
                android:textColor="#e7b615"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="7"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="8"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="9"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/divButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dark_shadow"
                android:text="/"
                android:textSize="30sp"
                android:textColor="#e7b615"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="4"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="5"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="6"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/multButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dark_shadow"
                android:text="*"
                android:textSize="30sp"
                android:textColor="#e7b615"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="1"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="2"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="3"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/minusButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dark_shadow"
                android:text="-"
                android:textSize="30sp"
                android:textColor="#e7b615"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/zero_button"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/resButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_shadow"
                android:text="="
                android:textSize="30sp"
                android:textColor="#353161"/>

            <Button
                android:id="@+id/plusButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dark_shadow"
                android:text="+"
                android:textSize="30sp"
                android:textColor="#e7b615"/>
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
